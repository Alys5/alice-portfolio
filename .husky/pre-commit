#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# =========================
# PRE-COMMIT HOOK - ALICE MANDELLI PORTFOLIO
# =========================
# Esegue linting automatico prima di ogni commit
# Autore: Alice Mandelli Portfolio System

echo "üîç Pre-commit hook: Eseguendo lint-staged..."

# Esegui lint-staged
npx lint-staged --concurrent false

# Verifica che non ci siano errori di linting
if [ $? -ne 0 ]; then
    echo "‚ùå Linting fallito. Correggi gli errori e riprova il commit."
    exit 1
fi

echo "‚úÖ Pre-commit hook completato con successo!"
