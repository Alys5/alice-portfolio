{
  "name": "alice-portfolio",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:user-flow": "cypress run --spec \"cypress/e2e/complete-user-flow.cy.js\"",
    "test:e2e:simplified": "cypress run --spec \"cypress/e2e/simplified-user-flow.cy.js\"",
    "test:e2e:home": "cypress run --spec \"cypress/e2e/home.cy.js\"",
    "test:e2e:all": "cypress run --spec \"cypress/e2e/**/*.cy.js\"",
    "build-only": "vite build",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "eslint --ext .js,.ts,.vue src",
    "format": "prettier --write \"src/**/*.{js,ts,vue,scss,css,json,md}\"",
    "lint:i18n": "vue-i18n-extract report -v -a -l src/data/i18n.it.ts src/data/i18n.en.ts src/data/i18n.es.ts --vueFiles=src/**/*.vue --jsFiles=src/**/*.ts",
    "test:accessibility": "node scripts/axe-test.js",
    "test:lighthouse": "lhci autorun",
    "test:accessibility:ci": "npm run test:accessibility && npm run test:lighthouse",
    "test:accessibility:local": "node scripts/test-accessibility-local.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:generate": "node scripts/generate-docs.js",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "analyze:performance": "npm run build && npm run analyze:bundle",
    "monitor:performance": "vite --mode performance",
    "report:anti-patterns": "echo 'Report anti-pattern disponibile in ANTI_PATTERN_ANALYSIS_REPORT.md'",
    "report:core-web-vitals": "npm run build:analyze && npm run analyze:performance && echo 'Report Core Web Vitals generato'",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:fonts": "node scripts/optimize-fonts.js",
    "optimize:all": "npm run optimize:images && npm run optimize:fonts && npm run build:analyze"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "@vueuse/core": "^13.4.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "marked": "^15.0.12",
    "pinia": "^3.0.1",
    "vite-plugin-pages": "^0.33.1",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.7",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/babel__core": "^7.20.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "axe-core": "^4.9.3",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.0",
    "eslint": "^9.22.0",
    "eslint-plugin-oxlint": "^0.16.0",
    "eslint-plugin-vue": "~10.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.2",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.0",
    "prettier": "3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass-embedded": "^1.89.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.0.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.1",
    "vue-i18n-extract": "^2.0.7",
    "vue-tsc": "^2.2.8",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "prettier --write"
    ]
  }
}
