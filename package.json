{
  "name": "portfolio",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --fix --ext .vue,.js,.ts,.jsx,.tsx",
    "ci:test": "npm run lint:check && npm run type-check",
    "ci:build": "NODE_ENV=production npm run build-only",
    "clean": "rimraf dist node_modules/.vite",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vueuse/motion": "^3.0.3",
    "gsap": "^3.13.0",
    "pinia": "^3.0.3",
    "vite-plugin-pwa": "^1.0.0",
    "vue": "^3.5.17",
    "vue-i18n": "^12.0.0-alpha.2",
    "vue-router": "^4.5.1",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.32",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-vue": "~10.2.0",
    "husky": "^9.0.11",
    "jiti": "^2.4.2",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.89.2",
    "typescript": "~5.8.0",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "vercel": {
    "buildCommand": "npm run build-only"
  }
}
